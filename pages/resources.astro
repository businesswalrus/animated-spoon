---
// src/pages/resources.astro
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Resources & Shop - AARBAA">
  <!-- Header Section -->
  <section class="text-center" style="
    padding-top: 100px !important;
    background-color: #0A3161;
    color: white;
    margin-top: 200px;
    padding-bottom: 4rem;
  ">
    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <h1 class="display-4 fw-bold mb-4">AARBAA Store & Resources</h1>
          <p class="lead mb-0">Gear up for the fight and educate yourself</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Shop Section -->
  <section class="section-padding bg-light">
    <div class="container">
      <div class="row justify-content-center mb-5">
        <div class="col-lg-8 text-center">
          <h2 class="mb-4">Official AARBAA Merchandise</h2>
          <p class="lead">Show your support with our exclusive gear. All proceeds support our advocacy work.</p>
        </div>
      </div>
      
      <div class="row g-4">
        <!-- Product 1 -->
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 border-0 shadow">
            <div style="height: 250px; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center;">
              <i class="fas fa-tshirt fa-5x text-secondary"></i>
            </div>
            <div class="card-body">
              <h3 class="card-title h5">AARBAA "Roads Are For Cars" T-Shirt</h3>
              <p class="card-text">Our signature t-shirt in bold red with white lettering. Perfect for city council meetings!</p>
              <div class="d-flex justify-content-between align-items-center mt-3">
                <span class="h5 mb-0">$24.99</span>
                <button class="btn btn-outline-danger">Add to Cart</button>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Product 2 -->
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 border-0 shadow">
            <div style="height: 250px; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center;">
              <i class="fas fa-mug-hot fa-5x text-secondary"></i>
            </div>
            <div class="card-body">
              <h3 class="card-title h5">AARBAA "Morning Commuter" Coffee Mug</h3>
              <p class="card-text">Enjoy your morning coffee while reminding yourself why you joined the fight. 15oz ceramic mug.</p>
              <div class="d-flex justify-content-between align-items-center mt-3">
                <span class="h5 mb-0">$18.99</span>
                <button class="btn btn-outline-danger">Add to Cart</button>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Product 3 -->
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 border-0 shadow">
            <div style="height: 250px; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center;">
              <i class="fas fa-car fa-5x text-secondary"></i>
            </div>
            <div class="card-body">
              <h3 class="card-title h5">AARBAA Bumper Sticker Pack</h3>
              <p class="card-text">Set of 3 weather-resistant bumper stickers with our most popular slogans. Show your support on the road!</p>
              <div class="d-flex justify-content-between align-items-center mt-3">
                <span class="h5 mb-0">$9.99</span>
                <button class="btn btn-outline-danger">Add to Cart</button>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Product 4 -->
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 border-0 shadow">
            <div style="height: 250px; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center;">
              <i class="fas fa-hat-cowboy fa-5x text-secondary"></i>
            </div>
            <div class="card-body">
              <h3 class="card-title h5">AARBAA Baseball Cap</h3>
              <p class="card-text">Adjustable baseball cap with embroidered AARBAA logo. Perfect for rallies and everyday wear.</p>
              <div class="d-flex justify-content-between align-items-center mt-3">
                <span class="h5 mb-0">$19.99</span>
                <button class="btn btn-outline-danger">Add to Cart</button>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Product 5 -->
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 border-0 shadow">
            <div style="height: 250px; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center;">
              <i class="fas fa-file-pdf fa-5x text-secondary"></i>
            </div>
            <div class="card-body">
              <h3 class="card-title h5">AARBAA Advocacy Toolkit (Digital Download)</h3>
              <p class="card-text">Everything you need to advocate for better bike infrastructure in your community. Templates, talking points, and more.</p>
              <div class="d-flex justify-content-between align-items-center mt-3">
                <span class="h5 mb-0">$14.99</span>
                <button class="btn btn-outline-danger">Add to Cart</button>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Product 6 -->
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 border-0 shadow">
            <div style="height: 250px; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center;">
              <i class="fas fa-bullhorn fa-5x text-secondary"></i>
            </div>
            <div class="card-body">
              <h3 class="card-title h5">AARBAA Protest Sign Kit</h3>
              <p class="card-text">Ready-to-assemble protest signs with our most effective slogans. Weatherproof and reusable.</p>
              <div class="d-flex justify-content-between align-items-center mt-3">
                <span class="h5 mb-0">$29.99</span>
                <button class="btn btn-outline-danger">Add to Cart</button>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="text-center mt-5">
        <p><em>Note: This is a satirical shop. Products are not actually for sale.</em></p>
      </div>
    </div>
  </section>

  <!-- Resources Section -->
  <section class="section-padding" style="background-color: white;">
    <div class="container">
      <div class="row justify-content-center mb-5">
        <div class="col-lg-8 text-center">
          <h2 class="mb-4">Educational Resources</h2>
          <p class="lead">Knowledge is power in the fight for separate bike paths.</p>
        </div>
      </div>
      
      <div class="row g-4">
        <!-- Resource 1 -->
        <div class="col-md-6">
          <div class="card h-100 border-0 shadow">
            <div class="card-body p-4">
              <h3 class="card-title h5 mb-3">Guide to Bike Infrastructure Advocacy</h3>
              <p class="card-text">Learn how to effectively advocate for separated bike paths in your community. This comprehensive guide includes:</p>
              <ul class="mb-3">
                <li>Statistics on bike path safety</li>
                <li>Talking points for city council meetings</li>
                <li>Success stories from other communities</li>
                <li>Template letters for contacting officials</li>
              </ul>
              <a href="#" class="btn btn-outline-primary mt-2">Download PDF</a>
            </div>
          </div>
        </div>
        
        <!-- Resource 2 -->
        <div class="col-md-6">
          <div class="card h-100 border-0 shadow">
            <div class="card-body p-4">
              <h3 class="card-title h5 mb-3">The Economic Case for Separated Bike Paths</h3>
              <p class="card-text">Data-driven arguments showing how dedicated cycling infrastructure benefits local economies:</p>
              <ul class="mb-3">
                <li>Increased property values near bike paths</li>
                <li>Higher retail spending in bike-friendly areas</li>
                <li>Reduced infrastructure maintenance costs</li>
                <li>Healthcare savings from increased physical activity</li>
              </ul>
              <a href="#" class="btn btn-outline-primary mt-2">Download PDF</a>
            </div>
          </div>
        </div>
        
        <!-- Resource 3 -->
        <div class="col-md-6">
          <div class="card h-100 border-0 shadow">
            <div class="card-body p-4">
              <h3 class="card-title h5 mb-3">Safety Statistics: Shared Roads vs. Separated Paths</h3>
              <p class="card-text">Research-backed data comparing accident rates between various cycling infrastructure types:</p>
              <ul class="mb-3">
                <li>Accident rates on shared roads vs. protected lanes</li>
                <li>Injury severity comparisons</li>
                <li>Impact on non-cyclist road users</li>
                <li>Case studies from cities with successful bike path networks</li>
              </ul>
              <a href="#" class="btn btn-outline-primary mt-2">Download PDF</a>
            </div>
          </div>
        </div>
        
        <!-- Resource 4 -->
        <div class="col-md-6">
          <div class="card h-100 border-0 shadow">
            <div class="card-body p-4">
              <h3 class="card-title h5 mb-3">Bicycle Infrastructure Funding Guide</h3>
              <p class="card-text">Learn about various funding sources available for bike infrastructure projects:</p>
              <ul class="mb-3">
                <li>Federal transportation grants</li>
                <li>State-level funding programs</li>
                <li>Public-private partnership opportunities</li>
                <li>Step-by-step guide to applying for infrastructure grants</li>
              </ul>
              <a href="#" class="btn btn-outline-primary mt-2">Download PDF</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Informational Videos Section -->
  <section class="section-padding bg-light">
    <div class="container">
      <div class="row justify-content-center mb-5">
        <div class="col-lg-8 text-center">
          <h2 class="mb-4">Video Resources</h2>
          <p class="lead">Visual explanations of our key issues and solutions</p>
        </div>
      </div>
      
      <div class="row g-4">
        <!-- Video 1 -->
        <div class="col-md-6">
          <div class="card h-100 border-0 shadow">
            <div style="height: 250px; background-color: #0A3161; display: flex; align-items: center; justify-content: center; color: white;">
              <div class="text-center">
                <i class="fas fa-play-circle fa-5x mb-3"></i>
                <h4>The Case for Separated Bike Paths</h4>
              </div>
            </div>
            <div class="card-body">
              <h3 class="card-title h5">Why Separated Bike Paths Make Sense</h3>
              <p class="card-text">This informative video explains the safety, economic, and quality-of-life benefits of dedicated cycling infrastructure for both cyclists and drivers.</p>
              <a href="#" class="btn btn-outline-danger">Watch Video</a>
            </div>
          </div>
        </div>
        
        <!-- Video 2 -->
        <div class="col-md-6">
          <div class="card h-100 border-0 shadow">
            <div style="height: 250px; background-color: #0A3161; display: flex; align-items: center; justify-content: center; color: white;">
              <div class="text-center">
                <i class="fas fa-play-circle fa-5x mb-3"></i>
                <h4>City Council Presentation Template</h4>
              </div>
            </div>
            <div class="card-body">
              <h3 class="card-title h5">How to Present at Your Local City Council</h3>
              <p class="card-text">A step-by-step guide to presenting a compelling case for bike infrastructure at your local government meetings with actual footage from successful presentations.</p>
              <a href="#" class="btn btn-outline-danger">Watch Video</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="section-padding" style="background-color: #B31942; color: white;">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
          <h2 class="mb-4">Ready to Make a Difference?</h2>
          <p class="lead mb-4">Join AARBAA today and help us advocate for safer roads with proper infrastructure for everyone.</p>
          <a href="#join" class="btn btn-light btn-lg px-5">Become a Member</a>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Add to cart functionality (just for demo purposes)
    const addToCartButtons = document.querySelectorAll('.btn-outline-danger');
    
    addToCartButtons.forEach(button => {
      button.addEventListener('click', function() {
        // Get product name from the card
        const productCard = this.closest('.card');
        const productName = productCard.querySelector('.card-title').textContent;
        
        // Change button text temporarily
        const originalText = this.textContent;
        this.textContent = 'Added!';
        this.classList.remove('btn-outline-danger');
        this.classList.add('btn-success');
        
        // Reset button after 2 seconds
        setTimeout(() => {
          this.textContent = originalText;
          this.classList.remove('btn-success');
          this.classList.add('btn-outline-danger');
        }, 2000);
        
        // Alert user (for demo only)
        alert(`Note: This is a satirical shop. "${productName}" isn't actually being added to a cart because these products don't exist!`);
      });
    });
  });
</script>
