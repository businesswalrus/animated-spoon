---
// src/pages/contact.astro
import MainLayout from '../layouts/MainLayout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<MainLayout title="Contact AARBAA - Americans Against Road Bikers Association">
  <!-- Header Section -->
  <section class="text-center" style="
    padding-top: 100px !important;
    background-color: #0A3161;
    color: white;
    margin-top: 200px;
    padding-bottom: 4rem;
  ">
    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <h1 class="display-4 fw-bold mb-4">Contact Us</h1>
          <p class="lead mb-0">Get in touch with AARBAA to join our cause or ask questions</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Information Section -->
  <section class="section-padding bg-light">
    <div class="container">
      <div class="row g-4">
        <div class="col-lg-4">
          <div class="card border-0 shadow-lg h-100">
            <div class="card-body p-4">
              <div class="d-flex align-items-center mb-4">
                <div class="me-3" style="background-color: rgba(179, 25, 66, 0.1); width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                  <i class="fas fa-map-marker-alt" style="color: #B31942;"></i>
                </div>
                <h3 class="card-title h5 mb-0">Headquarters</h3>
              </div>
              <p class="card-text">
                AARBAA National Headquarters<br>
                1234 Common Sense Lane<br>
                Anywhere, USA 12345
              </p>
              <p class="small text-muted">(Satirical address, we're primarily an online organization)</p>
            </div>
          </div>
        </div>
        
        <div class="col-lg-4">
          <div class="card border-0 shadow-lg h-100">
            <div class="card-body p-4">
              <div class="d-flex align-items-center mb-4">
                <div class="me-3" style="background-color: rgba(179, 25, 66, 0.1); width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                  <i class="fas fa-envelope" style="color: #B31942;"></i>
                </div>
                <h3 class="card-title h5 mb-0">Email Us</h3>
              </div>
              <p class="card-text mb-2">
                <strong>General Inquiries:</strong><br>
                <a href="mailto:info@aarbaa.com">info@aarbaa.com</a>
              </p>
              <p class="card-text mb-2">
                <strong>Media Relations:</strong><br>
                <a href="mailto:media@aarbaa.com">media@aarbaa.com</a>
              </p>
              <p class="card-text">
                <strong>Local Chapter Inquiries:</strong><br>
                <a href="mailto:chapters@aarbaa.com">chapters@aarbaa.com</a>
              </p>
            </div>
          </div>
        </div>
        
        <div class="col-lg-4">
          <div class="card border-0 shadow-lg h-100">
            <div class="card-body p-4">
              <div class="d-flex align-items-center mb-4">
                <div class="me-3" style="background-color: rgba(179, 25, 66, 0.1); width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                  <i class="fas fa-clock" style="color: #B31942;"></i>
                </div>
                <h3 class="card-title h5 mb-0">Response Times</h3>
              </div>
              <p class="card-text">
                We strive to respond to all inquiries within 24-48 hours during business days.
              </p>
              <p class="card-text">
                <strong>Regular monitoring hours:</strong><br>
                Monday-Friday: 9am - 5pm EST
              </p>
              <p class="small text-muted">For urgent matters, please indicate "URGENT" in your subject line.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="section-padding" style="background-color: white;">
    <div class="container">
      <div class="row justify-content-center mb-5">
        <div class="col-lg-8 text-center">
          <h2 class="mb-4">Send Us a Message</h2>
          <p class="lead">Questions? Comments? Ready to join the movement? Use the form below to get in touch.</p>
        </div>
      </div>
      
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <ContactForm />
        </div>
      </div>
    </div>
  </section>

  <!-- Find Local Chapter Section -->
  <section class="section-padding bg-light">
    <div class="container">
      <div class="row justify-content-center mb-5">
        <div class="col-lg-8 text-center">
          <h2 class="mb-4">Find a Local Chapter</h2>
          <p class="lead">Connect with AARBAA members in your area to coordinate local advocacy efforts.</p>
        </div>
      </div>
      
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="card border-0 shadow-lg">
            <div class="card-body p-5">
              <form id="chapterForm">
                <div class="mb-4">
                  <label for="zipCodeSearch" class="form-label">Enter your ZIP code</label>
                  <div class="input-group">
                    <input type="text" class="form-control form-control-lg" id="zipCodeSearch" placeholder="e.g., 90210" required>
                    <button type="submit" class="btn btn-danger">Find Chapters</button>
                  </div>
                </div>
              </form>
              
              <!-- Search results (hidden by default) -->
              <div id="chapterResults" class="mt-4 d-none">
                <h3 class="h5 mb-4">Chapters near you:</h3>
                <div class="list-group">
                  <a href="#" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                      <h5 class="mb-1">Los Angeles AARBAA Chapter</h5>
                      <small>12 miles</small>
                    </div>
                    <p class="mb-1">Meeting every Thursday at 7pm - Community Center</p>
                    <small>42 members</small>
                  </a>
                  <a href="#" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                      <h5 class="mb-1">Beverly Hills Road Advocates</h5>
                      <small>8 miles</small>
                    </div>
                    <p class="mb-1">Meeting 1st Tuesday of each month - Public Library</p>
                    <small>27 members</small>
                  </a>
                  <a href="#" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                      <h5 class="mb-1">Santa Monica Transportation Alliance</h5>
                      <small>15 miles</small>
                    </div>
                    <p class="mb-1">Meeting 2nd & 4th Wednesday - Coffee Shop</p>
                    <small>35 members</small>
                  </a>
                </div>
              </div>
              
              <!-- No chapters found message (hidden by default) -->
              <div id="noChapters" class="alert alert-info mt-4 d-none">
                <i class="fas fa-info-circle me-2"></i> No chapters found in your area yet. Would you like to <a href="#" class="alert-link">start one</a>?
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Social Media Section -->
  <section class="section-padding" style="background-color: #0A3161; color: white;">
    <div class="container">
      <div class="row justify-content-center mb-5">
        <div class="col-lg-8 text-center">
          <h2 class="mb-4">Connect With Us</h2>
          <p class="lead">Follow AARBAA on social media for updates, news, and community.</p>
        </div>
      </div>
      
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="row g-4 text-center">
            <div class="col-md-3 col-6">
              <a href="#" class="social-link">
                <div class="bg-white p-4 rounded-circle mx-auto mb-3" style="width: 80px; height: 80px; display: flex; align-items: center; justify-content: center;">
                  <i class="fab fa-facebook-f fa-2x" style="color: #1877f2;"></i>
                </div>
                <h3 class="h6">Facebook</h3>
              </a>
            </div>
            
            <div class="col-md-3 col-6">
              <a href="#" class="social-link">
                <div class="bg-white p-4 rounded-circle mx-auto mb-3" style="width: 80px; height: 80px; display: flex; align-items: center; justify-content: center;">
                  <i class="fab fa-twitter fa-2x" style="color: #1da1f2;"></i>
                </div>
                <h3 class="h6">Twitter</h3>
              </a>
            </div>
            
            <div class="col-md-3 col-6">
              <a href="#" class="social-link">
                <div class="bg-white p-4 rounded-circle mx-auto mb-3" style="width: 80px; height: 80px; display: flex; align-items: center; justify-content: center;">
                  <i class="fab fa-instagram fa-2x" style="color: #c32aa3;"></i>
                </div>
                <h3 class="h6">Instagram</h3>
              </a>
            </div>
            
            <div class="col-md-3 col-6">
              <a href="#" class="social-link">
                <div class="bg-white p-4 rounded-circle mx-auto mb-3" style="width: 80px; height: 80px; display: flex; align-items: center; justify-content: center;">
                  <i class="fab fa-youtube fa-2x" style="color: #ff0000;"></i>
                </div>
                <h3 class="h6">YouTube</h3>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .social-link {
    color: white;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .social-link:hover {
    transform: translateY(-5px);
  }
  
  .social-link:hover h3 {
    color: #B31942;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Chapter finder functionality
    const chapterForm = document.getElementById('chapterForm');
    const chapterResults = document.getElementById('chapterResults');
    const noChapters = document.getElementById('noChapters');
    
    if (chapterForm) {
      chapterForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        const zipCode = document.getElementById('zipCodeSearch').value;
        
        // Show results based on ZIP code (for demo purposes)
        if (zipCode.startsWith('9') || zipCode.startsWith('8')) {
          chapterResults.classList.remove('d-none');
          noChapters.classList.add('d-none');
        } else {
          chapterResults.classList.add('d-none');
          noChapters.classList.remove('d-none');
        }
      });
    }
  });
</script>
