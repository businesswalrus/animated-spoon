---
import 'bootstrap/dist/css/bootstrap.min.css';
import '../styles/global.css';
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" >
   <title>AARBAA - Americans Against Road Bikers Association of America</title>
  <meta name="description" content="AARBAA is dedicated to ensuring safe roads for drivers by advocating for responsible cycling practices and defending motorists' rights.">
  <meta property="og:title" content="AARBAA - Americans Against Road Bikers Association of America">
  <meta property="og:description" content="AARBAA is dedicated to ensuring safe roads for drivers by advocating for responsible cycling practices and defending motorists' rights.">
  <meta property="og:image" content="https://aarbaa.com/images/aarbaa-new-logo (2).svg">
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <!-- Font Awesome for icons -->
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
  />
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@400;700&family=Roboto:wght@400;500;700&display=swap"
    rel="stylesheet"
  />

  <style>
    /* Global Body & Headings */
    body {
      font-family: "Roboto", sans-serif;
      background-color: #f4f4f4;
      padding-top: 120px; /* Space for navbar */
    }
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      font-family: "Roboto Condensed", sans-serif;
      font-weight: 700;
      letter-spacing: 0.5px;
    }

    /* NAVBAR */
    .navbar {
      background-color: #041e42;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      height: 120px;  /* Keep the navbar height the same as before */
      min-height: 120px;
      display: flex;
      align-items: center;
      border-bottom: 5px solid #b31942;
      transition: all 0.3s ease;
    }
    .container.nav-container {
      display: flex;
      width: 100%;
      padding-left: 0;
      align-items: center;
    }
    .navbar-brand {
      margin-right: auto;
      padding-right: 2rem;
    }
    /* 
      LOGO: Now set to 75% of original size.
      Removed all !important usage and inline styles.
    */
    .navbar-brand img {
      height: 240px; /* Reduced from 300px to 240px (80% of current size) */
      width: auto;
      transition: all 0.3s ease;
    }
    .navbar-brand img:hover {
      transform: scale(1.02);
    }
    .navbar-nav .nav-link {
      color: #ffffff !important;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 1px;
      position: relative;
      transition: all 0.3s ease;
      white-space: nowrap;
    }
    .navbar-nav .nav-link::before {
      content: "";
      position: absolute;
      width: 0;
      height: 2px;
      bottom: -5px;
      left: 80%;
      background-color: #b31942; /* Old Glory Red */
      transition: all 0.3s ease;
    }
    .navbar-nav .nav-link:hover::before {
      width: 100%;
      left: 0;
    }
    .navbar-nav .nav-link:hover {
      color: #b31942 !important; /* Old Glory Red */
    }
    .navbar-nav .btn-danger {
      background-color: #b31942 !important; /* Old Glory Red */
      border-color: #b31942 !important;
      font-weight: bold;
      text-transform: uppercase;
      letter-spacing: 1px;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
      white-space: nowrap;
      padding: 0.5rem 1rem;
    }
    .navbar-nav .btn-danger::before {
      content: "";
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        120deg,
        transparent,
        rgba(255, 255, 255, 0.3),
        transparent
      );
      transition: all 0.6s;
    }
    .navbar-nav .btn-danger:hover::before {
      left: 100%;
    }
    .navbar-nav .btn-danger:hover {
      transform: scale(1.05);
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
      background-color: #0a3161 !important;
      border-color: #0a3161 !important;
    }

    /* RESPONSIVE LOGO SIZING */
    @media (min-width: 1200px) {
      .navbar-brand img {
        height: 120px; /* Reduced from 150px to 120px (80% of current size) */
      }
    }
    @media (max-width: 1199px) and (min-width: 992px) {
      .navbar-brand img {
        height: 108px; /* Reduced from 135px to 108px (80% of current size) */
      }
    }
    @media (max-width: 991px) {
      .navbar {
        height: 100px;
        max-height: 100px;
        padding: 0.5rem;
      }
      .navbar-brand {
        margin-right: 0;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
      }
      /* 
        On mobile, let's still keep a large logo if desired.
        Adjust as needed. 
      */
      .navbar-brand img {
        height: 108px; /* Reduced from 135px to 108px (80% of current size) */
        max-width: none;
        object-fit: contain;
        margin: 0 auto;
        position: relative;
        transform: none;
      }
      .navbar-toggler {
        position: absolute;
        right: 15px;
        top: 15px;
        padding: 0.25rem 0.5rem;
        z-index: 1100;
        background-color: rgba(179, 25, 66, 0.2);
        border: 2px solid #b31942;
      }
      .navbar-collapse {
        background-color: #041e42;
        border-radius: 0;
        margin-top: 0;
        padding: 3rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        position: fixed;
        top: 90px;
        left: 0;
        right: 0;
        z-index: 1050;
      }
    }
    @media (max-width: 576px) {
      .navbar-brand img {
        height: 66px; /* Reduced from 82px to 66px (80% of current size) */
      }
    }

    /* HERO SECTION 
       The default hero has a background image overlay for desktop.
       For mobile, we want a vertical split: 
         Left: <h1>, Right: the protest image.
       We'll remove the background image from .hero-section on mobile
       and place it in a .hero-image half instead.
    */
    .hero-section {
      position: relative;
      background-color: #0a3161;
      background-image: linear-gradient(
          rgba(0, 0, 0, 0.5),
          rgba(0, 0, 0, 0.5)
        ),
        url("/images/protest.webp");
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      color: white;
      padding-top: 0; /* Changed from 80px to 0 */
      margin-top: 120px;
      min-height: 600px;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
    }
    /* 
      By default (desktop/tablet), it's one background image with text over it.
      On mobile, we split the hero into two columns: text on the left, image on the right.
    */
    @media (max-width: 991px) {
      .hero-section {
        background: none;  /* Remove the background image from the container */
        display: flex;
        flex-direction: row; /* side-by-side */
        min-height: auto;
      }
      /* 
        We'll treat the H1 as a half-width column. 
        You may need a container around the H1 for more styling.
      */
      .hero-section h1 {
        width: 50%;
        margin: 0;
        padding: 1rem;
        background-color: #041e42; /* Solid background behind text */
        z-index: 10;
      }
      /* The right half is the actual image container. */
      .hero-image {
        width: 50%;
        background-image: url("/images/protest.webp");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100%;
      }
    }

    /* 
      If you need a horizontal "divider" or extra design, tweak this. 
      Currently just an example of a red bar. 
    */
    .section-divider {
      height: 5px;
      background-color: #b31942;
      margin: 0;
      width: 100%;
    }

    .text-white-fix {
      color: #0a3161 !important;
    }

    /* CUSTOM COLORS */
    .text-primary-aarbaa {
      color: #0a3161 !important; /* Old Glory Blue */
    }
    .text-danger-aarbaa {
      color: #b31942 !important; /* Old Glory Red */
    }
    .bg-primary-aarbaa {
      background-color: #0a3161 !important;
    }
    .bg-danger-aarbaa {
      background-color: #b31942 !important;
    }
    .border-primary-aarbaa {
      border-color: #0a3161 !important;
    }
    .border-danger-aarbaa {
      border-color: #b31942 !important;
    }

    /* BOOTSTRAP BUTTON OVERRIDES */
    .btn-danger {
      background-color: #b31942 !important;
      border-color: #b31942 !important;
      transition: all 0.3s ease;
    }
    .btn-danger:hover {
      background-color: #0a3161 !important;
      border-color: #0a3161 !important;
    }
    .btn-outline-danger {
      color: #b31942 !important;
      border-color: #b31942 !important;
    }
    .btn-outline-danger:hover {
      background-color: #b31942 !important;
      color: white !important;
    }
    .btn-primary {
      background-color: #0a3161 !important;
      border-color: #0a3161 !important;
    }
    .btn-outline-primary {
      color: #0a3161 !important;
      border-color: #0a3161 !important;
    }
    .btn-outline-primary:hover {
      background-color: #0a3161 !important;
      color: white !important;
    }
  </style>

  <!-- Slot for page-specific style overrides -->
  <slot name="head" />
</head>
<body>
  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
    <div class="container nav-container">
      <a class="navbar-brand" href="/">
        <!-- Removed all inline styles; size controlled by CSS. -->
        <img 
          src="/images/aarbaa-new-logo (2).svg" 
          alt="AARBAA Logo" 
          class="d-inline-block align-text-top"
        />
      </a>
      <button 
        class="navbar-toggler" 
        type="button" 
        data-bs-toggle="collapse" 
        data-bs-target="#navbarNav"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/#about">About</a></li>
          <li class="nav-item"><a class="nav-link" href="/#issues">Issues</a></li>
          <li class="nav-item"><a class="nav-link" href="/resources">Shop</a></li>
          <li class="nav-item"><a class="nav-link" href="/blog">News</a></li>
          <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>
          <li class="nav-item ms-lg-2">
            <a class="btn btn-danger" href="/join">Join Us</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <main>
    <!-- 
      The hero HTML is just an example of how you might set up 
      a left text side and right image side on mobile. 
      If your hero is inserted via <slot />, ensure you have 
      .hero-section and .hero-image classes present inside that slot.
    -->
    <slot />
  </main>

  <!-- FOOTER -->
  <footer
    class="footer"
    style="padding: 2rem 0 0.5rem; border-top: 5px solid #b31942; background-color: #041e42;"
  >
    <div class="container">
      <div class="row">
        <div class="col-lg-4 mb-4">
          <img
            src="/images/aarbaa-new-logo (2).svg"
            alt="AARBAA Logo"
            height="60"
            class="mb-3"
          />
          <p
            class="fw-bold text-uppercase"
            style="letter-spacing: 1px; color: #b31942; font-size: 1rem;"
          >
            Americans Against Road Bikers Association
          </p>
          <p style="color: rgba(255, 255, 255, 0.8); font-size: 0.9rem;">
            Because America Has Had Enough
          </p>
        </div>
        <div class="col-md-2 col-6 mb-4">
          <h5
            class="text-white mb-3"
            style="
              font-family: 'Roboto Condensed', sans-serif;
              letter-spacing: 1px;
              font-size: 1.1rem;
              text-transform: uppercase;
              font-weight: 600;
            "
          >
            Quick Links
          </h5>
          <ul class="list-unstyled">
            <li class="mb-2">
              <a href="/#about" class="footer-link">About Us</a>
            </li>
            <li class="mb-2">
              <a href="/#issues" class="footer-link">Key Issues</a>
            </li>
            <li class="mb-2">
              <a href="/resources" class="footer-link">Shop</a>
            </li>
            <li class="mb-2">
              <a href="/blog" class="footer-link">News</a>
            </li>
          </ul>
        </div>
        <div class="col-md-2 col-6 mb-4">
          <h5
            class="text-white mb-3"
            style="
              font-family: 'Roboto Condensed', sans-serif;
              letter-spacing: 1px;
              font-size: 1.1rem;
              text-transform: uppercase;
              font-weight: 600;
            "
          >
            Get Involved
          </h5>
          <ul class="list-unstyled">
            <li class="mb-2">
              <a href="/#join" class="footer-link">Become a Member</a>
            </li>
            <li class="mb-2">
              <a href="/donate" class="footer-link">Donate</a>
            </li>
            <li class="mb-2">
              <a href="/contact" class="footer-link">Contact Us</a>
            </li>
          </ul>
        </div>
        <div class="col-lg-4 mb-4">
          <h5
            class="text-white mb-3"
            style="
              font-family: 'Roboto Condensed', sans-serif;
              letter-spacing: 1px;
              font-size: 1.1rem;
              text-transform: uppercase;
              font-weight: 600;
            "
          >
            Stay in the Fight
          </h5>
          <p style="color: rgba(255, 255, 255, 0.8); font-size: 0.9rem;">
            Join our intel network for the latest updates.
          </p>
          <form class="d-flex">
            <input
              type="email"
              class="form-control me-2"
              placeholder="Your email"
              required
            />
            <button type="submit" class="btn btn-danger">DEPLOY</button>
          </form>
          <div class="social-links mt-3">
            <a
              href="#"
              class="social-icon me-3"
              style="color: white; font-size: 1.2rem;"
              ><i class="fab fa-facebook-f"></i
            ></a>
            <a
              href="#"
              class="social-icon me-3"
              style="color: white; font-size: 1.2rem;"
              ><i class="fab fa-twitter"></i
            ></a>
            <a
              href="#"
              class="social-icon me-3"
              style="color: white; font-size: 1.2rem;"
              ><i class="fab fa-instagram"></i
            ></a>
            <a
              href="#"
              class="social-icon"
              style="color: white; font-size: 1.2rem;"
              ><i class="fab fa-youtube"></i
            ></a>
          </div>
        </div>
      </div>
      <hr
        class="mt-2 mb-3"
        style="border-color: rgba(255, 255, 255, 0.1); border-width: 1px;"
      />
      <div class="row">
        <div class="col-md-6 text-center text-md-start">
          <p style="color: rgba(255, 255, 255, 0.6); font-size: 0.8rem;">
            &copy; 2025 AARBAA - Defending America's Roads
          </p>
        </div>
        <div class="col-md-6 text-center text-md-end">
          <a href="/privacy" class="footer-link me-3">Privacy Policy</a>
          <a href="/terms" class="footer-link">Terms of Use</a>
        </div>
      </div>
    </div>
  </footer>

  <style>
    .footer {
      color: #f4f4f4;
    }
    .footer-link {
      color: rgba(255, 255, 255, 0.7);
      text-decoration: none;
      transition: color 0.3s ease;
      font-size: 0.9rem;
    }
    .footer-link:hover {
      color: #b31942;
    }
    .social-icon {
      font-size: 1rem;
      transition: color 0.3s ease;
    }
    .social-icon:hover {
      opacity: 0.8;
    }
  </style>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      // Smooth scrolling function
      const scrollToSection = (targetId) => {
        const targetElement = document.getElementById(targetId);
        if (targetElement) {
          window.scrollTo({
            top: targetElement.offsetTop - 130, 
            behavior: "smooth",
          });
        }
      };

      // Handle hash links on homepage
      document.querySelectorAll('a[href^="/#"]').forEach((anchor) => {
        anchor.addEventListener("click", function (e) {
          const targetId = this.getAttribute("href").substring(2);
          if (
            window.location.pathname === "/" ||
            window.location.pathname === ""
          ) {
            e.preventDefault();
            scrollToSection(targetId);
          }
        });
      });

      // Handle regular hash links (without leading slash)
      document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
        if (anchor.getAttribute("href").length > 1) {
          anchor.addEventListener("click", function (e) {
            e.preventDefault();
            const targetId = this.getAttribute("href").substring(1);
            scrollToSection(targetId);
          });
        }
      });

      // Special handling for News button to scroll to latest updates
      const newsLink = document.querySelector('a[href="/blog"]');
      if (newsLink) {
        newsLink.addEventListener("click", (e) => {
          if (
            window.location.pathname === "/" ||
            window.location.pathname === ""
          ) {
            e.preventDefault();
            scrollToSection("news");
          }
        });
      }
    });
  </script>

  <!-- Bootstrap JS Bundle with Popper -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"
  ></script>
</body>
</html>