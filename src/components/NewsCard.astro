---
// /components/NewsCard.astro
const { image, title, date, excerpt, link } = Astro.props;
---
<div class="col-lg-4 col-md-6 mb-4">
  <div class="card h-100 border-0 shadow-lg card-hover" style="border-radius: 8px; overflow: hidden; transition: transform 0.3s ease, box-shadow 0.3s ease;">
    <div style="position: relative; overflow: hidden;">
      <img src={image} class="card-img-top" alt={title} style="object-fit: cover; object-position: center top; width: 100%; height: 250px;"> <!-- Increased height -->
      <div style="position: absolute; top: 0; left: 0; width: 100%; height: 5px; background-color: #B31942;"></div>
      <div style="position: absolute; top: 10px; right: 10px; background-color: rgba(10, 49, 97, 0.9); color: white; padding: 5px 10px; border-radius: 4px; font-size: 0.8rem; font-weight: 600;">
        <i class="far fa-calendar-alt me-1"></i> {date}
      </div>
    </div>
    <div class="card-body p-4">
      <h3 class="card-title mb-3" style="font-family: 'Roboto Condensed', sans-serif; font-size: 1.3rem; font-weight: 700; color: #0A3161; line-height: 1.3;">{title}</h3>
      <p class="card-text" style="color: #555; font-size: 0.95rem; margin-bottom: 1.5rem;">{excerpt}</p>
      <a href={link} class="btn btn-outline-danger" style="border-radius: 4px; font-weight: 600; font-size: 0.9rem; transition: all 0.3s ease;">
        Read Full Story <i class="fas fa-arrow-right ms-1"></i>
      </a>
    </div>
  </div>
</div>

<style>
  .card-hover:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(0,0,0,0.1) !important;
  }
  
  .card-hover:hover img {
    transform: scale(1.05);
  }
  
  .card-hover:hover .btn-outline-danger {
    background-color: #B31942;
    color: white;
    border-color: #B31942;
  }
</style>
