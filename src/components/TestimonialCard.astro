---
// src/components/TestimonialCard.astro
interface Props {
  quote: string;
  name: string;
  location: string;
  color: string;
}

const { quote, name, location, color } = Astro.props;
---

<div class="col-md-4 mb-4">
  <div class="testimonial-card">
    <div class="testimonial-card-body">
      <div class="quote-icon">
        <i class="fas fa-quote-left fa-3x"></i>
      </div>
      <p class="testimonial-text">{quote}</p>
      <div class="testimonial-divider"></div>
      <h5 class="testimonial-name" style={`color: ${color};`}>{name}</h5>
      <p class="testimonial-location">{location}</p>
    </div>
  </div>
</div>

<style>
  .testimonial-card {
    height: 100%;
    border: none;
    border-radius: 15px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }

  .testimonial-card-body {
    padding: 2rem 1.5rem;
    text-align: center;
    background: linear-gradient(135deg, #0A3161 0%, #1a4b8c 100%);
    border-radius: 15px;
    border-left: 5px solid #B31942;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .quote-icon {
    margin-bottom: 1rem;
    color: #B31942;
    opacity: 0.7;
    transition: all 0.3s ease;
  }

  .testimonial-text {
    color: white;
    font-style: italic;
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }

  .testimonial-divider {
    width: 70px;
    height: 4px;
    background-color: #B31942;
    margin: 0 auto 1rem;
  }

  .testimonial-name {
    font-weight: 700;
    font-size: 1.3rem;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
    margin-bottom: 0.5rem;
    transition: transform 0.3s ease;
  }

  .testimonial-location {
    color: rgba(255, 255, 255, 0.8);
    margin: 0;
  }

  .testimonial-card:hover {
    transform: translateY(-10px) scale(1.03);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
  }

  .testimonial-card:hover .quote-icon {
    transform: scale(1.2) rotate(-10deg);
    opacity: 0.9;
  }

  .testimonial-card:hover .testimonial-name {
    transform: scale(1.05);
  }
</style>
