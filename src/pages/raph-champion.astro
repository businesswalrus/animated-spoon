    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Georgia', serif;
            min-height: 100vh;
            background: radial-gradient(circle at center, #2d1b1b 0%, #1a1a1a 50%, #000000 100%);
            color: #e0e0e0;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            position: relative;
            overflow-x: hidden;
        }

        /* Animated background particles */
        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image:
                radial-gradient(2px 2px at 20% 30%, rgba(255, 68, 68, 0.3), transparent),
                radial-gradient(2px 2px at 60% 70%, rgba(255, 68, 68, 0.2), transparent),
                radial-gradient(1px 1px at 50% 50%, rgba(255, 68, 68, 0.4), transparent),
                radial-gradient(2px 2px at 80% 10%, rgba(255, 68, 68, 0.3), transparent);
            background-size: 200% 200%;
            animation: sparkle 20s ease-in-out infinite;
            pointer-events: none;
        }

        @keyframes sparkle {
            0%, 100% { opacity: 0.3; }
            50% { opacity: 0.7; }
        }

        .container {
            max-width: 1000px;
            text-align: center;
            position: relative;
            z-index: 1;
        }

        .crown {
            font-size: 120px;
            margin-bottom: 20px;
            animation: float 3s ease-in-out infinite;
            filter: drop-shadow(0 0 20px rgba(255, 215, 0, 0.8));
        }

        @keyframes float {
            0%, 100% { transform: translateY(0px) rotate(-5deg); }
            50% { transform: translateY(-20px) rotate(5deg); }
        }

        h1 {
            font-size: 5em;
            color: #ff4444;
            text-shadow:
                0 0 10px rgba(255, 68, 68, 0.8),
                0 0 20px rgba(255, 68, 68, 0.6),
                0 0 30px rgba(255, 68, 68, 0.4),
                3px 3px 0px rgba(0, 0, 0, 0.8);
            margin-bottom: 20px;
            letter-spacing: 0.1em;
            animation: glow 2s ease-in-out infinite alternate;
        }

        @keyframes glow {
            from {
                text-shadow:
                    0 0 10px rgba(255, 68, 68, 0.8),
                    0 0 20px rgba(255, 68, 68, 0.6),
                    0 0 30px rgba(255, 68, 68, 0.4),
                    3px 3px 0px rgba(0, 0, 0, 0.8);
            }
            to {
                text-shadow:
                    0 0 20px rgba(255, 68, 68, 1),
                    0 0 30px rgba(255, 68, 68, 0.8),
                    0 0 40px rgba(255, 68, 68, 0.6),
                    3px 3px 0px rgba(0, 0, 0, 0.8);
            }
        }

        .subtitle {
            font-size: 2.5em;
            color: #ffaa44;
            font-style: italic;
            margin-bottom: 40px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
        }

        .grade-display {
            display: inline-block;
            font-size: 8em;
            font-weight: bold;
            color: #ff6666;
            background: linear-gradient(135deg, rgba(255, 68, 68, 0.3) 0%, rgba(255, 68, 68, 0.1) 100%);
            border: 5px solid #ff4444;
            border-radius: 30px;
            padding: 40px 80px;
            margin: 40px 0;
            box-shadow:
                0 0 30px rgba(255, 68, 68, 0.6),
                inset 0 0 20px rgba(255, 68, 68, 0.2);
            animation: pulse 3s ease-in-out infinite;
        }

        @keyframes pulse {
            0%, 100% {
                transform: scale(1);
                box-shadow:
                    0 0 30px rgba(255, 68, 68, 0.6),
                    inset 0 0 20px rgba(255, 68, 68, 0.2);
            }
            50% {
                transform: scale(1.05);
                box-shadow:
                    0 0 50px rgba(255, 68, 68, 0.9),
                    inset 0 0 30px rgba(255, 68, 68, 0.3);
            }
        }

        .champion-card {
            background: linear-gradient(135deg, rgba(40, 40, 40, 0.9) 0%, rgba(20, 20, 20, 0.9) 100%);
            border: 3px solid #ff4444;
            border-radius: 20px;
            padding: 60px;
            margin: 60px auto;
            max-width: 800px;
            box-shadow:
                0 10px 40px rgba(0, 0, 0, 0.5),
                0 0 50px rgba(255, 68, 68, 0.3);
            position: relative;
            overflow: hidden;
        }

        .champion-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(
                45deg,
                transparent 30%,
                rgba(255, 68, 68, 0.1) 50%,
                transparent 70%
            );
            animation: shine 6s ease-in-out infinite;
        }

        @keyframes shine {
            0%, 100% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
            50% { transform: translateX(100%) translateY(100%) rotate(45deg); }
        }

        .description {
            font-size: 1.4em;
            line-height: 1.8;
            color: #d0d0d0;
            margin-bottom: 30px;
            position: relative;
            z-index: 1;
        }

        .achievement-list {
            list-style: none;
            margin: 40px 0;
            position: relative;
            z-index: 1;
        }

        .achievement-list li {
            font-size: 1.3em;
            color: #ffaa44;
            margin: 20px 0;
            padding: 15px;
            background: rgba(255, 68, 68, 0.1);
            border-left: 4px solid #ff4444;
            border-radius: 5px;
            text-align: left;
        }

