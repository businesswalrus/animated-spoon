            margin-right: 15px;
        }

        .proclamation {
            font-size: 2em;
            color: #ff6666;
            font-weight: bold;
            margin-top: 50px;
            padding: 30px;
            border-top: 3px solid #ff4444;
            border-bottom: 3px solid #ff4444;
            text-transform: uppercase;
            letter-spacing: 0.2em;
            position: relative;
            z-index: 1;
        }

        .decorative-line {
            width: 60%;
            height: 3px;
            background: linear-gradient(90deg, transparent, #ff4444, transparent);
            margin: 30px auto;
        }

        @media (max-width: 768px) {
            h1 {
                font-size: 3em;
            }
            .subtitle {
                font-size: 1.5em;
            }
            .grade-display {
                font-size: 5em;
                padding: 30px 50px;
            }
            .crown {
                font-size: 80px;
            }
            .champion-card {
                padding: 30px;
            }
            .description {
                font-size: 1.1em;
            }
            .achievement-list li {
                font-size: 1.1em;
            }
            .proclamation {
                font-size: 1.3em;
            }
        }
    </style>
</head>
