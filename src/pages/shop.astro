        }, 2000);
        
        // Alert user (for demo only)
        alert(`Note: This is a satirical shop. "${productName}" isn't actually being added to a cart because these products don't exist!`);
      });
    });
    
    // Function to add item to cart
    function addItemToCart(name, price) {
      // Create item object
      const item = {
        name: name,
        price: price,
        id: Date.now() // Simple unique ID
      };
      
      // Add to items array
      cartItems.push(item);
      
      // Show cart items section
      emptyCart.classList.add('d-none');
      cartItemList.classList.remove('d-none');
      cartTotals.classList.remove('d-none');
      
      // Create cart item element
      const itemElement = document.createElement('div');
      itemElement.className = 'cart-item p-3 border-bottom d-flex align-items-center justify-content-between';
      itemElement.dataset.id = item.id;
      
      itemElement.innerHTML = `
        <div class="d-flex align-items-center">
          <div style="width: 50px; text-align: center;">
            <i class="fas fa-tshirt fa-2x text-secondary"></i>
          </div>
          <div class="ms-3">
            <h6 class="mb-0">${name}</h6>
            <small class="text-muted">Qty: 1</small>
          </div>
        </div>
        <div class="d-flex align-items-center">
          <div class="me-3">
            <span class="fw-bold">$${price.toFixed(2)}</span>
          </div>
          <button class="btn btn-sm btn-outline-danger remove-item-btn">
            <i class="fas fa-trash"></i>
          </button>
        </div>
      `;
      
      // Add to cart list
      cartItemList.appendChild(itemElement);
      
      // Add remove functionality
      const removeButton = itemElement.querySelector('.remove-item-btn');
      removeButton.addEventListener('click', function() {
        removeItemFromCart(item.id);
      });
      
      // Update totals
      updateCartTotals();
    }
    
    // Function to remove item from cart
    function removeItemFromCart(id) {
      // Remove from array
      cartItems = cartItems.filter(item => item.id !== id);
      
      // Remove element
      const itemElement = document.querySelector(`.cart-item[data-id="${id}"]`);
      if (itemElement) {
        itemElement.remove();
      }
      
      // Check if cart is empty
      if (cartItems.length === 0) {
        emptyCart.classList.remove('d-none');
        cartItemList.classList.add('d-none');
        cartTotals.classList.add('d-none');
      }
      
      // Update totals
      updateCartTotals();
    }
    
    // Function to update cart totals
    function updateCartTotals() {
      const subtotal = cartItems.reduce((total, item) => total + item.price, 0);
      const shipping = cartItems.length > 0 ? 5.99 : 0;
      const total = subtotal + shipping;
      
      cartSubtotal.textContent = `$${subtotal.toFixed(2)}`;
      cartTotal.textContent = `$${total.toFixed(2)}`;
    }
    
    // Checkout button functionality
    checkoutBtn.addEventListener('click', function() {
      alert("This is a satirical shop. No items will actually be shipped.");
    });
  });
