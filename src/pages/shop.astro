    let cartItems = [];
    
    // Add to cart functionality
    addToCartButtons.forEach(button => {
      button.addEventListener('click', function() {
        // Get product information
        const card = this.closest('.card');
        let productName, productPrice;
        
        if (card) {
          productName = card.querySelector('.card-title').textContent;
          const priceText = card.querySelector('.product-price .fw-bold').textContent;
          productPrice = parseFloat(priceText.replace('$', ''));
        } else {
          // Default values if card structure is different
          productName = "AARBAA Product";
          productPrice = 19.99;
        }
        
        // Add item to cart
        addItemToCart(productName, productPrice);
        
        // Change button text temporarily
