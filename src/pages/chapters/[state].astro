---
import MainLayout from '../../layouts/MainLayout.astro';
import PageHero from '../../components/PageHero.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import StatsCounter from '../../components/StatsCounter.astro';
import TestimonialCard from '../../components/TestimonialCard.astro';
import ContactForm from '../../components/ContactForm.astro';
import { STATES, getStateBySlug, getAllStateSlugs } from '../../data/states';

// Enable prerendering for static generation of all 50 state pages
export const prerender = true;

export async function getStaticPaths() {
  return STATES.map((state) => ({
    params: { state: state.slug },
    props: { stateData: state },
  }));
}

const { stateData } = Astro.props;

const pageTitle = `AARBAA ${stateData.name} Chapter`;
const pageDescription = `Join the AARBAA chapter in ${stateData.name}. ${stateData.stats.members} members strong with ${stateData.stats.chapters} local chapters advocating for safer roads and better cycling infrastructure.`;
const pageUrl = `https://aarbaa.com/chapters/${stateData.slug}`;
const pageImage = 'https://aarbaa.com/images/protest.webp';

// Breadcrumb navigation data
const breadcrumbs = [
  { name: 'Home', url: '/' },
  { name: 'Chapters', url: '/chapters' },
  { name: stateData.name, url: pageUrl }
];

// Structured data for SEO
const structuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": `${pageUrl}#organization`,
      "name": `AARBAA ${stateData.name} Chapter`,
      "url": pageUrl,
      "description": pageDescription,
      "logo": "https://aarbaa.com/images/aarbaa-new-logo (2).svg",
      "address": {
        "@type": "PostalAddress",
        "addressRegion": stateData.abbreviation,
        "addressLocality": stateData.capital,
        "addressCountry": "US"
      },
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": stateData.chapterPresident.phone,
        "email": stateData.chapterPresident.email,
        "contactType": "Chapter President"
      },
      "parentOrganization": {
        "@type": "Organization",
        "name": "Americans Against Road Bikers Association of America",
        "url": "https://aarbaa.com"
      }
    },
    {
      "@type": "BreadcrumbList",
      "@id": `${pageUrl}#breadcrumb`,
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://aarbaa.com"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Chapters",
          "item": "https://aarbaa.com/chapters"
        },
        {
          "@type": "ListItem",
          "position": 3,
          "name": stateData.name,
          "item": pageUrl
        }
      ]
    }
  ]
};
---

<MainLayout title={pageTitle} description={pageDescription}>
  <Fragment slot="head">
    <!-- Canonical URL -->
    <link rel="canonical" href={pageUrl} />

    <!-- Enhanced Open Graph Tags -->
    <meta property="og:type" content="organization" />
    <meta property="og:url" content={pageUrl} />
    <meta property="og:image" content={pageImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="AARBAA" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter Card Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={pageImage} />

    <!-- Geo Tags -->
    <meta name="geo.region" content={`US-${stateData.abbreviation}`} />
    <meta name="geo.placename" content={stateData.capital} />

    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  </Fragment>
  <!-- Page Hero -->
  <PageHero
    title={`${stateData.name} Chapter`}
    subtitle={`${stateData.stats.members} Members Fighting for Safer Roads`}
    backgroundImage="/images/protest.webp"
    minHeight="350px"
  />

  <!-- Breadcrumbs -->
  <Breadcrumbs items={breadcrumbs} />

  <!-- State Stats Section -->
  <section class="py-5" style="background: linear-gradient(135deg, #f8f8f8 0%, #e8e8e8 100%);">
    <div class="container">
      <h2 class="text-center mb-5" style="font-family: 'Roboto Condensed', sans-serif; font-weight: 700; color: #0A3161;">
        {stateData.name} Chapter Impact
      </h2>
      <div class="row">
        <StatsCounter
          number={`${stateData.stats.members.toLocaleString()}`}
          label="Active Members"
          icon="fa-users"
        />
        <StatsCounter
          number={`${stateData.stats.chapters}`}
          label={stateData.stats.chapters === 1 ? "Local Chapter" : "Local Chapters"}
          icon="fa-flag"
        />
        <StatsCounter
          number={`${stateData.stats.victories}`}
          label="Infrastructure Victories"
          icon="fa-trophy"
        />
        <StatsCounter
          number={stateData.abbreviation}
          label="State Code"
          icon="fa-map-marker-alt"
        />
      </div>
    </div>
  </section>

  <!-- Chapter Leadership Section -->
  <section class="py-5 bg-white">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <h2 class="text-center mb-5" style="font-family: 'Roboto Condensed', sans-serif; font-weight: 700; color: #0A3161;">
            Chapter Leadership
          </h2>

          <div class="leadership-card p-4 mb-4" style="background: linear-gradient(135deg, #0A3161 0%, #1a4b8c 100%); border-radius: 15px; box-shadow: 0 4px 15px rgba(0,0,0,0.2); border-left: 5px solid #B31942;">
            <div class="row align-items-center">
              <div class="col-md-3 text-center mb-3 mb-md-0">
                <div class="president-icon" style="width: 100px; height: 100px; border-radius: 50%; background-color: rgba(179, 25, 66, 0.2); margin: 0 auto; display: flex; align-items: center; justify-content: center; border: 3px solid #B31942;">
                  <i class="fas fa-user-tie fa-3x" style="color: #B31942;"></i>
                </div>
              </div>
              <div class="col-md-9">
                <h3 style="color: white; font-family: 'Roboto Condensed', sans-serif; margin-bottom: 0.5rem;">
                  {stateData.chapterPresident.name}
                </h3>
                <p style="color: rgba(255,255,255,0.9); font-size: 1.1rem; margin-bottom: 1rem;">
                  <strong>Chapter President â€¢ {stateData.capital}</strong>
                </p>
                <div class="contact-info" style="color: rgba(255,255,255,0.85);">
                  <p class="mb-2">
                    <i class="fas fa-envelope me-2" style="color: #B31942;"></i>
                    <a href={`mailto:${stateData.chapterPresident.email}`} style="color: white; text-decoration: none;">
                      {stateData.chapterPresident.email}
                    </a>
                  </p>
                  <p class="mb-0">
                    <i class="fas fa-phone me-2" style="color: #B31942;"></i>
                    {stateData.chapterPresident.phone}
                  </p>
                </div>
              </div>
            </div>
          </div>

          {/* Rating Display */}
          {stateData.rating && (
            <div class="rating-card p-4 mb-4" style="background: white; border-radius: 15px; box-shadow: 0 4px 15px rgba(0,0,0,0.1); border: 2px solid #FFD700;">
              <div class="text-center">
                <h4 style="color: #0A3161; font-family: 'Roboto Condensed', sans-serif; font-weight: 700; margin-bottom: 1rem;">
                  Chapter Rating
                </h4>
                <div class="d-flex justify-content-center align-items-center gap-2">
                  <div class="stars">
                    {[1, 2, 3, 4, 5].map((star) => (
                      <i
                        class={`fas fa-star fa-lg`}
                        style={`color: ${star <= Math.floor(stateData.rating.average) ? '#FFD700' : star - 0.5 <= stateData.rating.average ? '#FFD700' : '#ddd'}; margin: 0 2px;`}
                      ></i>
                    ))}
                  </div>
                  <span style="font-size: 1.5rem; font-weight: 700; color: #0A3161; margin-left: 0.5rem;">
                    {stateData.rating.average.toFixed(1)}
                  </span>
                </div>
                <p style="color: #666; margin-top: 0.5rem; margin-bottom: 0;">
                  Based on {stateData.rating.count.toLocaleString()} member reviews
                </p>
              </div>
            </div>
          )}

          <div class="alert" style="background-color: rgba(179, 25, 66, 0.1); border-left: 4px solid #B31942; padding: 1rem 1.5rem;">
            <p class="mb-0" style="color: #333;">
              <i class="fas fa-info-circle me-2" style="color: #B31942;"></i>
              <strong>Join the {stateData.name} chapter!</strong> Contact our chapter president to get involved with local advocacy efforts.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-5" style="background: linear-gradient(135deg, #f8f8f8 0%, #e8e8e8 100%);">
    <div class="container">
      <h2 class="text-center mb-5" style="font-family: 'Roboto Condensed', sans-serif; font-weight: 700; color: #0A3161;">
        Voices from {stateData.name}
      </h2>
      <div class="row">
        {stateData.testimonials.map((testimonial, index) => {
          const colors = ['#B31942', '#0A3161', '#FFD700'];
          return (
            <TestimonialCard
              quote={testimonial.quote}
              name={testimonial.author}
              location={`${testimonial.city}, ${stateData.abbreviation}`}
              color={colors[index % colors.length]}
            />
          );
        })}
      </div>
    </div>
  </section>

  <!-- Featured Article Section -->
  <section class="py-5 bg-white">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-10">
          <h2 class="text-center mb-5" style="font-family: 'Roboto Condensed', sans-serif; font-weight: 700; color: #0A3161;">
            Latest from {stateData.name}
          </h2>

          <div class="featured-article-card" style="background: white; border-radius: 15px; overflow: hidden; box-shadow: 0 4px 15px rgba(0,0,0,0.1); border-top: 4px solid #B31942; transition: all 0.3s ease;">
            <div class="p-4">
              <div class="d-flex align-items-center mb-3">
                <div class="icon-container me-3" style="width: 60px; height: 60px; border-radius: 50%; background-color: rgba(179, 25, 66, 0.1); display: flex; align-items: center; justify-content: center;">
                  <i class="fas fa-newspaper fa-2x" style="color: #B31942;"></i>
                </div>
                <div>
                  <span class="badge" style="background-color: #0A3161; font-size: 0.8rem; letter-spacing: 1px;">
                    FEATURED STORY
                  </span>
                </div>
              </div>

              <h3 style="color: #0A3161; font-family: 'Roboto Condensed', sans-serif; font-weight: 700; margin-bottom: 1rem;">
                {stateData.featuredArticle.title}
              </h3>

              <p style="color: #555; font-size: 1.1rem; line-height: 1.8; margin-bottom: 1.5rem;">
                {stateData.featuredArticle.excerpt}
              </p>

              <a href={stateData.featuredArticle.link} class="btn" style="background-color: #B31942; color: white; padding: 0.75rem 2rem; border-radius: 50px; text-decoration: none; font-weight: 600; transition: all 0.3s ease; display: inline-block;">
                Read Full Story
                <i class="fas fa-arrow-right ms-2"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQs Section -->
  {stateData.faqs && stateData.faqs.length > 0 && (
    <section class="py-5" style="background: linear-gradient(135deg, #f8f8f8 0%, #e8e8e8 100%);">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-10">
            <h2 class="text-center mb-5" style="font-family: 'Roboto Condensed', sans-serif; font-weight: 700; color: #0A3161;">
              Frequently Asked Questions
            </h2>

            <div class="accordion" id="faqAccordion">
              {stateData.faqs.map((faq, index) => (
                <div class="accordion-item mb-3" style="border: none; border-radius: 10px; overflow: hidden; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
                  <h3 class="accordion-header">
                    <button
                      class={`accordion-button ${index !== 0 ? 'collapsed' : ''}`}
                      type="button"
                      data-bs-toggle="collapse"
                      data-bs-target={`#faq${index}`}
                      aria-expanded={index === 0 ? 'true' : 'false'}
                      style="background-color: white; color: #0A3161; font-weight: 600; font-size: 1.1rem; padding: 1.25rem;"
                    >
                      {faq.question}
                    </button>
                  </h3>
                  <div id={`faq${index}`} class={`accordion-collapse collapse ${index === 0 ? 'show' : ''}`} data-bs-parent="#faqAccordion">
                    <div class="accordion-body" style="padding: 1.5rem; color: #555; line-height: 1.8;">
                      {faq.answer}
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Upcoming Events Section -->
  {stateData.upcomingEvents && stateData.upcomingEvents.length > 0 && (
    <section class="py-5 bg-white">
      <div class="container">
        <h2 class="text-center mb-5" style="font-family: 'Roboto Condensed', sans-serif; font-weight: 700; color: #0A3161;">
          Upcoming Events in {stateData.name}
        </h2>

        <div class="row">
          {stateData.upcomingEvents.map((event) => {
            const eventDate = new Date(event.date);
            const month = eventDate.toLocaleString('default', { month: 'short' }).toUpperCase();
            const day = eventDate.getDate();

            return (
              <div class="col-lg-4 col-md-6 mb-4">
                <div class="event-card h-100" style="background: white; border-radius: 15px; overflow: hidden; box-shadow: 0 4px 15px rgba(0,0,0,0.1); transition: all 0.3s ease;">
                  <div class="event-header" style={`background: linear-gradient(135deg, ${event.eventType === 'rally' ? '#B31942' : event.eventType === 'meeting' ? '#0A3161' : event.eventType === 'presentation' ? '#2d5016' : '#FFD700'} 0%, ${event.eventType === 'rally' ? '#d91e52' : event.eventType === 'meeting' ? '#1a4b8c' : event.eventType === 'presentation' ? '#4a8226' : '#FFC700'} 100%); padding: 1rem; color: white;`}>
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="date-box text-center" style="background: white; color: #0A3161; padding: 0.5rem 0.75rem; border-radius: 8px; min-width: 60px;">
                        <div style="font-size: 0.8rem; font-weight: 600;">{month}</div>
                        <div style="font-size: 1.5rem; font-weight: 700; line-height: 1;">{day}</div>
                      </div>
                      <span class="badge" style="background-color: rgba(255,255,255,0.3); font-size: 0.75rem; padding: 0.4rem 0.8rem;">
                        {event.eventType.toUpperCase()}
                      </span>
                    </div>
                  </div>

                  <div class="event-body p-4">
                    <h4 style="color: #0A3161; font-family: 'Roboto Condensed', sans-serif; font-weight: 700; margin-bottom: 1rem;">
                      {event.name}
                    </h4>

                    <div class="event-details mb-3" style="color: #666;">
                      <p class="mb-2">
                        <i class="fas fa-clock me-2" style="color: #B31942; width: 20px;"></i>
                        {event.time}
                      </p>
                      <p class="mb-2">
                        <i class="fas fa-map-marker-alt me-2" style="color: #B31942; width: 20px;"></i>
                        {event.venue}
                      </p>
                      <p class="mb-2">
                        <i class="fas fa-location-arrow me-2" style="color: #B31942; width: 20px;"></i>
                        {event.city}, {stateData.abbreviation}
                      </p>
                    </div>

                    <p style="color: #555; font-size: 0.95rem; line-height: 1.6; margin-bottom: 1.5rem;">
                      {event.description}
                    </p>

                    {event.registrationRequired && (
                      <div class="alert alert-info p-2" style="background-color: rgba(10, 49, 97, 0.1); border: none; font-size: 0.85rem;">
                        <i class="fas fa-info-circle me-2"></i>
                        Registration Required
                      </div>
                    )}
                  </div>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </section>
  )}

  <!-- Victories Section -->
  {stateData.victories && stateData.victories.length > 0 && (
    <section class="py-5" style="background: linear-gradient(135deg, #f8f8f8 0%, #e8e8e8 100%);">
      <div class="container">
        <h2 class="text-center mb-5" style="font-family: 'Roboto Condensed', sans-serif; font-weight: 700; color: #0A3161;">
          {stateData.name} Infrastructure Victories
        </h2>

        <div class="row">
          {stateData.victories.slice(0, 3).map((victory, index) => {
            const victoryDate = new Date(victory.date);
            const formattedDate = victoryDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
            const categoryColors = {
              'infrastructure': '#0A3161',
              'legislation': '#B31942',
              'funding': '#2d5016',
              'awareness': '#FFD700'
            };

            return (
              <div class="col-lg-4 col-md-6 mb-4">
                <div class="victory-card h-100" style="background: white; border-radius: 15px; overflow: hidden; box-shadow: 0 4px 15px rgba(0,0,0,0.1); transition: all 0.3s ease; border-top: 4px solid;">
                  <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                      <span class="badge" style={`background-color: ${categoryColors[victory.category]}; font-size: 0.75rem; padding: 0.5rem 1rem;`}>
                        {victory.category.toUpperCase()}
                      </span>
                      <small style="color: #999;">{formattedDate}</small>
                    </div>

                    <h4 style="color: #0A3161; font-family: 'Roboto Condensed', sans-serif; font-weight: 700; margin-bottom: 1rem;">
                      {victory.title}
                    </h4>

                    <p style="color: #555; font-size: 0.95rem; line-height: 1.6; margin-bottom: 1rem;">
                      {victory.description}
                    </p>

                    <div class="victory-impact" style="background-color: rgba(179, 25, 66, 0.05); padding: 1rem; border-radius: 8px; border-left: 3px solid #B31942;">
                      <strong style="color: #B31942; font-size: 0.85rem;">IMPACT:</strong>
                      <p style="color: #333; font-size: 0.9rem; margin-bottom: 0; margin-top: 0.5rem;">
                        {victory.impact}
                      </p>
                    </div>

                    <div class="mt-3">
                      <small style="color: #666;">
                        <i class="fas fa-map-marker-alt me-2"></i>
                        {victory.location}
                      </small>
                    </div>
                  </div>
                </div>
              </div>
            );
          })}
        </div>

        {stateData.victories.length > 3 && (
          <div class="text-center mt-4">
            <p style="color: #666;">
              <strong>+ {stateData.victories.length - 3} more victories</strong> in {stateData.name}
            </p>
          </div>
        )}
      </div>
    </section>
  )}

  <!-- Infrastructure Issues Section -->
  {stateData.infrastructureIssues && stateData.infrastructureIssues.length > 0 && (
    <section class="py-5 bg-white">
      <div class="container">
        <h2 class="text-center mb-5" style="font-family: 'Roboto Condensed', sans-serif; font-weight: 700; color: #0A3161;">
          Infrastructure Issues We're Addressing
        </h2>

        <div class="row">
          {stateData.infrastructureIssues.map((issue) => {
            const severityColors = {
              'critical': '#B31942',
              'high': '#FF6B35',
              'medium': '#FFD700'
            };
            const statusIcons = {
              'identified': 'fa-eye',
              'advocating': 'fa-bullhorn',
              'approved': 'fa-check-circle',
              'in-progress': 'fa-hard-hat',
              'resolved': 'fa-trophy'
            };

            return (
              <div class="col-lg-6 mb-4">
                <div class="issue-card h-100" style="background: white; border-radius: 15px; overflow: hidden; box-shadow: 0 4px 15px rgba(0,0,0,0.1); transition: all 0.3s ease;">
                  <div class="issue-header p-3" style={`background: linear-gradient(135deg, ${severityColors[issue.severity]} 0%, ${severityColors[issue.severity]}dd 100%); color: white;`}>
                    <div class="d-flex justify-content-between align-items-center">
                      <span class="badge" style="background-color: rgba(255,255,255,0.3); font-size: 0.75rem; padding: 0.4rem 0.8rem;">
                        {issue.severity.toUpperCase()} PRIORITY
                      </span>
                      <span style="font-size: 0.85rem;">
                        <i class={`fas ${statusIcons[issue.status]} me-2`}></i>
                        {issue.status.replace('-', ' ').toUpperCase()}
                      </span>
                    </div>
                  </div>

                  <div class="issue-body p-4">
                    <h4 style="color: #0A3161; font-family: 'Roboto Condensed', sans-serif; font-weight: 700; margin-bottom: 1rem;">
                      {issue.title}
                    </h4>

                    <p style="color: #555; font-size: 0.95rem; line-height: 1.6; margin-bottom: 1rem;">
                      {issue.description}
                    </p>

                    <div class="issue-details">
                      <div class="mb-3">
                        <strong style="color: #0A3161; font-size: 0.9rem;">
                          <i class="fas fa-map-marked-alt me-2"></i>Location:
                        </strong>
                        <p style="color: #666; font-size: 0.9rem; margin-top: 0.25rem; margin-bottom: 0;">
                          {issue.location}
                        </p>
                      </div>

                      <div class="mb-3">
                        <strong style="color: #0A3161; font-size: 0.9rem;">
                          <i class="fas fa-city me-2"></i>Affected Areas:
                        </strong>
                        <p style="color: #666; font-size: 0.9rem; margin-top: 0.25rem; margin-bottom: 0;">
                          {issue.affectedCities.join(', ')}
                        </p>
                      </div>

                      <div class="proposed-solution" style="background-color: rgba(10, 49, 97, 0.05); padding: 1rem; border-radius: 8px; border-left: 3px solid #0A3161;">
                        <strong style="color: #0A3161; font-size: 0.85rem;">
                          <i class="fas fa-lightbulb me-2"></i>PROPOSED SOLUTION:
                        </strong>
                        <p style="color: #333; font-size: 0.9rem; margin-bottom: 0; margin-top: 0.5rem;">
                          {issue.proposedSolution}
                        </p>
                      </div>

                      <div class="mt-3">
                        <small style="color: #999;">
                          Last updated: {new Date(issue.lastUpdated).toLocaleDateString()}
                        </small>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </section>
  )}

  <!-- Local Statistics Section -->
  {stateData.localStats && (
    <section class="py-5" style="background: linear-gradient(135deg, #f8f8f8 0%, #e8e8e8 100%);">
      <div class="container">
        <h2 class="text-center mb-5" style="font-family: 'Roboto Condensed', sans-serif; font-weight: 700; color: #0A3161;">
          {stateData.name} Cycling Safety Statistics
        </h2>

        <div class="row">
          <!-- Fatalities Card -->
          <div class="col-lg-4 mb-4">
            <div class="stats-card h-100" style="background: white; border-radius: 15px; overflow: hidden; box-shadow: 0 4px 15px rgba(0,0,0,0.1); border-top: 4px solid #B31942;">
              <div class="card-body p-4">
                <div class="text-center mb-3">
