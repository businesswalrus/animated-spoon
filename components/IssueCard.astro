---
// /components/IssueCard.astro
const { icon, title, content } = Astro.props;
---
<div class="col-md-6 col-lg-3">
  <div class="card h-100 border-0 shadow card-hover" style="border-top: 5px solid #B31942 !important; transition: all 0.3s ease;">
    <div class="card-body p-4">
      <div class="mb-3 text-center">
        <i class={`fas ${icon} fa-3x`} style="color: #B31942;"></i>
      </div>
      <h3 class="card-title h5 mb-3" style="font-family: 'Roboto Condensed', sans-serif; font-size: 1.5rem; color: #B31942; letter-spacing: 1px;">{title}</h3>
      <p class="card-text">{content}</p>
    </div>
  </div>
</div>
