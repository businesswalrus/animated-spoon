---
// /components/NewsCard.astro
const { image, title, date, excerpt, link } = Astro.props;
---
<div class="col-lg-4 col-md-6 mb-4">
  <div class="card h-100 border-0 shadow card-hover" style="border-top: 5px solid #B31942 !important; transition: all 0.3s ease;">
    <img src={image} class="card-img-top" alt={title} style="height: 250px; object-fit: cover;">
    <div class="card-body p-4">
      <div class="d-flex justify-content-between align-items-center mb-2">
        <small class="text-muted"><i class="far fa-calendar-alt me-1"></i> {date}</small>
      </div>
      <h3 class="card-title h5 mb-3" style="font-family: 'Roboto Condensed', sans-serif; font-size: 1.25rem; font-weight: 700;">{title}</h3>
      <p class="card-text">{excerpt}</p>
      <a href={link} class="btn btn-sm btn-outline-danger mt-2">Read More <i class="fas fa-arrow-right ms-1"></i></a>
    </div>
  </div>
</div>
